# ===========================================
# КАДРЫ - HR Management System
# Скопируйте этот файл: cp .env.example .env
# Измените пароли на свои!
# ===========================================

# База данных MySQL
MYSQL_USER=hrms
MYSQL_PASSWORD=hrmspassword123
MYSQL_ROOT_PASSWORD=rootpassword123
MYSQL_DATABASE=hrms

# Подключение к БД (пароль после hrms: должен совпадать с MYSQL_PASSWORD)
DATABASE_URL="mysql://hrms:hrmspassword123@db:3306/hrms"

# JWT секрет (измените на свой случайный ключ!)
JWT_SECRET=hrms-jwt-secret-key-2024-very-secure

# Backend порт (не менять)
PORT=7070

# Frontend API URL (не менять - работает через nginx)
NEXT_PUBLIC_API_URL=/api

# ===========================================
# Telegram уведомления (от Hikvision Face ID)
# ===========================================
# Токен бота — получить у @BotFather в Telegram
TELEGRAM_TOKEN=123456789:ABCdefGHIjklmnoPQRstuvWXYZ
# ID чатов для уведомлений (через запятую) — узнать у @userinfobot
TELEGRAM_CHAT_IDS=123456789,987654321

# ===========================================
# Hikvision Face ID устройства
# Формат: [{"ip":"...","officeName":"...","direction":"IN или OUT"}]
# direction: IN = вход, OUT = выход
# officeName должен совпадать с названием офиса в разделе "Настройки"
# ===========================================
HIKVISION_DEVICES=[{"ip":"192.168.1.190","officeName":"Главный офис","direction":"IN"},{"ip":"192.168.1.191","officeName":"Главный офис","direction":"OUT"}]
